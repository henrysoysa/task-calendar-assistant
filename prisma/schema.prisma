datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id           Int      @id @default(autoincrement())
  userId       String?
  taskName     String
  description  String?
  priority     Priority
  project      Project  @relation(fields: [projectId], references: [id])
  projectId    Int
  deadline     DateTime
  timeRequired Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Event {
  id    Int      @id @default(autoincrement())
  title String
  start DateTime
  end   DateTime
}
