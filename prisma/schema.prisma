datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Project {
  id        Int      @id @default(autoincrement())
  userId    String
  name      String
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
}

model Task {
  id           Int      @id @default(autoincrement())
  userId       String
  taskName     String
  description  String?
  priority     Priority
  project      Project  @relation(fields: [projectId], references: [id])
  projectId    Int
  deadline     DateTime
  timeRequired Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Event {
  id     Int      @id @default(autoincrement())
  userId String
  title  String
  start  DateTime
  end    DateTime
}
